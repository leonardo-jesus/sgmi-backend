# Server Configuration
PORT=4000
NODE_ENV=development

# CORS Origins (comma-separated)
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Database Configuration
# For local development with your own PostgreSQL instance:
# DATABASE_URL="postgresql://postgres:password@localhost:5432/sgmi?schema=public"
# For Docker setup (automatically set by docker-compose):
DATABASE_URL="postgresql://postgres:postgres@db:5432/sgmi?schema=public"

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRY=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=600

# WebSocket
WS_PATH=/ws

# Chatbot (OpenAI)
OPENAI_API_KEY=COLOQUE_SUA_API_KEY
OPENAI_MODEL=gpt-4.1-mini
OPENAI_TEMPERATURE=0.3
CHAT_MAX_HISTORY=20
CHAT_TIMEOUT_MS=30000

# Mock: deixe true se NÃO tiver key localmente; em produção use false
CHAT_MOCK_WHEN_NO_KEY=true
